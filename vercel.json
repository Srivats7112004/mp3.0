{
  "version": 2,
  "builds": [
    {
      "src": "api/analyze-image.py",
      "use": "@vercel/python"
    },
    {
      "src": "index.html",
      "use": "@vercel/static"
    },
    {
      "src": "explore.html",
      "use": "@vercel/static"
    },
    {
      "src": "*.css",
      "use": "@vercel/static"
    },
    {
      "src": "*.js",
      "use": "@vercel/static"
    },
    {
      "src": "vendors.json",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/analyze-image",
      "dest": "/api/analyze-image.py",
      "methods": ["POST"]
    },
    {
      "src": "/(explore-styles.css|styles.css|explore-script.js|script.js|vendors.json)",
      "dest": "/$1"  // Serve specific static files
    },
    {
      "src": "/explore",
      "dest": "/explore.html"  // Route /explore to explore.html (if using clean URLs)
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"  // Fallback to index.html for root/other paths
    }
  ]
}
